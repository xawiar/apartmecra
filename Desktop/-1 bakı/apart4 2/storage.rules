rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Panel images - authenticated users can read/write
    match /panel-images/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Company logos - authenticated users can read/write
    match /company-logos/{logoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Site images - authenticated users can read/write
    match /site-images/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Agreement documents - authenticated users can read/write
    match /agreement-documents/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
